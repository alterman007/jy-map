.force-detail-wrapper {
  position fixed;
  top: 200px;
  left: 630px;
  width: 350px;
  // height: 515px;
  padding: 15px;
  color: #fff;
  line-height: 1.8;
  img {
    display: block;
    width: 100%;
    height: 155px;
  }
  .h6-name {
    font-size: 24px;
    opacity 0.8;
    font-weight: bold;
  }
  .info {
    font-size: 18px;
    opacity 0.8;
  }
  .timer-range-search {
    padding-top: 5px;
    .split-line {
      border: 1px solid #11517F;
    }
    .data-picker {
      display: block;
      margin: 10px 0;
    }
  }
  .action-detail-wrapper {
    // border: 1px solid red;
    margin-top: 10px;
    display: flex;
    flex-wrap: wrap;
    justify-content space-between
    button {
      cursor pointer;
      margin-bottom: 14px;
      background: #20AAFF;
      border: none;
      outline: none;
      height: 35px;
      line-height: 35px;
      width: 47%;
      font-size: 22px;
      opacity 0.8;
      color: #FFF;
    }
  }
}
