.network-alarm-history-wrapper {
  position fixed;
  left: 108px;
  top: 96px;
  bottom: 80px;
  width: 506px;
 // width: 406px;
  color: #fff;
  display: flex;
  flex-direction: column;
  font-weight: 600;
  .type-tab {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin: 10px 0 8px;
    flex: none;
    span {
      flex: auto;
      text-align: center;
      height: 38px;
      line-height: 38px;
      border: 2px solid #68CCF8;
      background: #05121C;
      margin-right: 5px;
      font-size: 24px;
      &:last-child {
        margin-right: 0;
      }
      &.active {
        background: #68CCF8;
        color: black;
      }
    }
  }
  hr {
    height 3px;
    border: none;
    background: #20AAFF;
    flex: none;
    width: 100%;
    margin: 0;
  }
  .alarm-list {
    margin: 0;
    padding: 0 10px;
    list-style: none;
    position relative;
    flex: auto;
    overflow-x hidden;
    overflow-y auto;
    cursor pointer;
    .isSelected {
      background: #20AAFF;
    }
    .alarm-item {
      // height: 90px;
      display: flex;
      align-items: center;
      border-bottom: 1px solid #20AAFF;
      padding: 10px 10px;
      &:last-child {
        border-bottom: none;
      }
      img {
        width: 115px;
        // height: 64px;
        flex: none;
        margin-right: 9px;
      }
      .alarm-desc {
        color: #fff;
        // height 70px;
        // border: 1px solid red;
        flex: auto;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        font-size: 24px;
        // .ty
        .name {
          // font-size: 24px;
          white-space: nowrap;
         // overflow hidden;
        }
        .time {
          // font-size: 18px;
        }
      }
    }
    &::after {
      // content: ' ';
      // position absolute;
      // bottom: -2px;
