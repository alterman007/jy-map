.police-call-wrapper {
  position fixed;
  right: 108px;
  top: 96px;
  bottom: 100px;
  overflow: hidden;
  pointer-events: none;
  .police-call-info {
    display: flex;
    flex-direction: column;
    height: 100%;
    pointer-events: auto;
    margin-right: 120px;
     .police-statistical {
        height: 100%;
        padding: 0 10px;
        overflow: auto;
        h2 {
          color: #fff;
          font-size: 28px;
          font-weight: normal;
        }
      }
    .police-call-list {
      padding: 0 10px;
      flex: auto;
      overflow: auto;
      font-size: 18px;
      color: #fff;
      // background: green;
      .police-call-item {
        padding: 10px 0;
        border-bottom: 2px solid #10517F;
        .desc {
          display: flex;
          flex-wrap: wrap;
          span {
            width: 50%;
            flex: none;
            letter-spacing:1px;
            margin-bottom: 10px;
            &:nth-child(2n) {
              width: 45%;
              padding-left: 5%;
            }
          }
        }
        .text {
        }
      }
    }
  }
  .isAlarmComing {
    animation: isAlarmComing .5s infinite;
  }

  .police-alarm-status {
    
    opacity: 0;
    position: absolute;
    right: 3px;
  }

  .police-call-icon {
    pointer-events: auto;
    // margin-top: 130px;
    cursor pointer;
    width: 107px;
    height: 107px;
  }
  .police-call-info {
    pointer-events: auto;
    margin-right: 120px;
    width: 668px;
  }
  .police-station-statistical {
    li {
      list-style: none;
      padding: 10px 0;
      border-bottom: 1px solid white;
    }
  }
}

@keyframes isAlarmComing {
  0% {
    opacity: 0
  }
  100% {
    opacity: 1
  }
}