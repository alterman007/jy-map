html, body {
  margin: 0;
  padding: 0;
  height: 100%;
}
#root {
  height: 100%;
  width: 2880px;
  transform: scaleX(0.67);
  transform-origin: 0%;
}
.app-root {
  height:100px;
  position: relative;
}

// antd
.content {
  position: absolute;
  z-index: 2;
  width 100%;
  &::before, &::after {
    content: ' ';
    position absolute;
    top: 70px;
    width: 20px;
    height: 945px;
  }
  &::before {
    left: 20px;
    background: url('./assets/imgs//left.png');
  }
  &::after {
    right: 20px;
    background: url('./assets/imgs//right.png');
  }
  .ant-calendar-picker-input {
    background: black;
    border: none;
    border-radius: 0;
    color: #fff;
  }
  .ant-calendar-range-picker-separator {
    color: #20AAFF;
    transform: scaleX(2);
  }
  .ant-calendar-picker-icon {
    display: none;
  }
  .ant-calendar-picker-clear {
    color: #20AAFF;
    background: none;
  }
}

.ant-message {
  font-size: 28px;
  top: 300px;
 .anticon-exclamation-circle {
    font-size: 28px;
  }
}

conrer-order(conrerColor, borderCorlor, bgColor) {
  background: conrerColor left top,
    conrerColor left top,
    conrerColor right top,
    conrerColor right top,
    conrerColor left bottom,
    conrerColor left bottom,
    conrerColor right bottom,
    conrerColor right bottom,
    borderCorlor top,
    borderCorlor bottom,
    borderCorlor left,
    borderCorlor right,
    bgColor;
  background-repeat: no-repeat;
  background-position: 0px 0px, 0px 0px, 0px 100%, 0px 100%, 100% 0px, 100% 0px, 100% 100%, 100% 100%, 0px 0px, 0px 100%, 0px 100%, 100% 100%;
  background-size: 4px 15px, 15px 4px, 4px 15px, 15px 4px, 4px 15px, 15px 4px, 4px 15px, 15px 4px, 100% 4px, 100% 2px, 2px 100%, 2px 100%;
}

.corner-border {
  // conrer-order(linear-gradient(#20AAFF, #20AAFF), linear-gradient(#20AAFF55, #20AAFF55), rgba(2, 18, 41, 0.6))
  conrer-order(linear-gradient(#76FBD7, #76FBD7), linear-gradient(#23547655, #23547655), #05121C)
}
.camerinfo-border {
  conrer-order(linear-gradient(#76FBD7, #76FBD7), linear-gradient(#23547655, #23547655), #05121C)
}
.corner-border-highlight-bg {
  conrer-order(linear-gradient(#76FBD7, #76FBD7), linear-gradient(#23547655, #23547655), #05121C)
  //conrer-order(linear-gradient(#20AAFF, #20AAFF), linear-gradient(#20AAFF55, #20AAFF55), #102B52cc)
}

.corner-border-warning {
  conrer-order(linear-gradient(#F52323, #F52323), linear-gradient(#F5232355, #F5232355), rgba(5,8,28,1))
}

::-webkit-scrollbar {
    width: 10px;
    height: 10px;
    background-color: transparent;
}

::-webkit-scrollbar-thumb {
    background-color: #68CCFB;
    border-radius: 10px;
}

::-webkit-scrollbar-thumb:hover {
    background-color: #68CCFB;
}

.resetModalStye {
  .ant-modal-content {
    background: transparent;
    .ant-modal-close-x {
        font-size: 22px;
        color: white;
    }
    .ant-modal-header {
      background: transparent;
      .ant-modal-title {
        font-size: 24px;
        color: white;
      }
    }
    .ant-modal-body {
      color: white;
      font-size: 18px;
    }
  }
}


.search-by-time {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  font-size: 30px;
}

