html, body {
  margin: 0;
  padding: 0;
  height: 100%;
}

#root, .app-root {
  height: 100%;
}

.content {
  position: absolute;
  z-index: 2;
  width 100%;
  &::before, &::after {
    content: ' ';
    position absolute;
    top: 70px;
    width: 20px;
    height: 945px;
  }
  &::before {
    left: 20px;
    background: url('./assets/imgs//left.png');
  }
  &::after {
    right: 20px;
    background: url('./assets/imgs//right.png');
  }
}


.corner-border {
  background: linear-gradient(#20AAFF, #20AAFF) left top,
    linear-gradient(#20AAFF, #20AAFF) left top,
    linear-gradient(#20AAFF, #20AAFF) right top,
    linear-gradient(#20AAFF, #20AAFF) right top,
    linear-gradient(#20AAFF, #20AAFF) left bottom,
    linear-gradient(#20AAFF, #20AAFF) left bottom,
    linear-gradient(#20AAFF, #20AAFF) right bottom,
    linear-gradient(#20AAFF, #20AAFF) right bottom,
    linear-gradient(#20AAFF55, #20AAFF55) top,
    linear-gradient(#20AAFF55, #20AAFF55) bottom,
    linear-gradient(#20AAFF55, #20AAFF55) left,
    linear-gradient(#20AAFF55, #20AAFF55) right,
    rgba(2, 18, 41, 0.6);
  background-repeat: no-repeat;
  background-position: 0px 0px, 0px 0px, 0px 100%, 0px 100%, 100% 0px, 100% 0px, 100% 100%, 100% 100%, 0px 0px, 0px 100%, 0px 100%, 100% 100%;
  background-size: 2px 15px, 15px 2px, 2px 15px, 15px 2px, 2px 15px, 15px 2px, 2px 15px, 15px 2px, 100% 2px, 100% 2px, 2px 100%, 2px 100%;
}
